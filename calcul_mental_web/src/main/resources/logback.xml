<configuration debug="true"> 

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender"> 
    <encoder>
      <pattern>%d{ISO8601,UTC}Z|%5p%marker|%t|%c{1}|%m%n</pattern>
    </encoder>
  </appender>


  <logger name="controller" level="debug"/>


  <root level="warn">
    <appender-ref ref="console" />
  </root>
</configuration>